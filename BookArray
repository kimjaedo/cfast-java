package fc.java.model2;

import java.util.Arrays;

public class BookArray {
    private static final int DEFAULT_CAPACITY=5; // 수정불가(final)=>상수
    private Book[] elements;
    private int size=0;
    private Arrays Array;

    public BookArray() {
        elements=new Book[DEFAULT_CAPACITY]; // 5개 크기의 배열
    }
    // 저장하는 동작
    public void add(Book element){
        // 크기체크 -> if
        if(size==elements.length){
            // 크기를 2배로 늘리는 작업
            ensureCapacity();
        }
        elements[size++]=element;
    }
    // 얻는동작(가져오는)
    public Book get(int index){
        if(index<0 || index>=size){
            throw new IndexOutOfBoundsException("index의 범위(0~4)가 초과됨");
        }
        return elements[index];
    }
    // 원소의 개수를 넘겨주는 동작
    public int size(){
        return size;
    }
    public void ensureCapacity(){
        int newCapacity=elements.length*2;
        elements=Array.copyOf(elements, newCapacity);
    }
}
